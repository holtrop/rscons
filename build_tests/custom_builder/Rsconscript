class MySource < Rscons::Builder
  def run(options)
    File.open(@target, 'w') do |fh|
      fh.puts <<EOF
#define THE_VALUE 5678
EOF
    end
    true
  end
end

build do
  Environment.new do |env|
    env.add_builder(MySource)
    env.MySource('inc.h', [])
    env.Program('program.exe', Dir['*.c'])
  end
end
